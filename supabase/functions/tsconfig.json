{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["@types/node"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 